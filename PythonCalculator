#create variable for add
def add():
    while true:
        print(x + y)
#create a variable for subtract
def subtract():
    while true:
        print(x - y)
#create a variable for multiply
def multiply():
    while true:
        print(x * y)
#create a variable for divide
def divide():
    while true:
        print(x // y)
    
#create a variable for arithmetic
foo = add, subtract, multiply, divide
#create and integer variable for x
x = 0
#create an integer variable for y
y = 0

#ask the user which form of arithmetic
foo = input("Lowercase only. Add, subtract, multiply, or divide? ")
#ask the user "X: " and put answer in x
x = input("X: ")
#ask the user "Y: " and put answer in y
y = input("Y: ")

#convert x to integer
x = int(x)
#convert y to integer
y = int(y)

#if add
if foo == 'add':
    print(x + y)
#if subtract
if foo == 'subtract':
    print(x - y)
#if multiply
if foo == 'multiply':
    print(x * y)
#if divide
if foo =='divide':
    print(x // y)

